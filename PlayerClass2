
public class Player {
	private int x;
	private int y;
	private int dx;
	private int dy;
	public Player(int xx, int yy, int dxx, int dyy) {
		x=xx;
		y=yy;
		dx=dxx;
		dy=dyy;
	}
	public void setX(int xx) {
		x=xx;
	}
	public void setY(int yy) {
		y=yy;
	}
	public void setDx(int dxx) {
		dx=dxx;
	}
	public void setDy(int dyy) {
		dy=dyy;
	}
	public int getX() {
		return x;
	}
	public int getY() {
		return y;
	}
	public int getDx() {
		return dx;
	}
	public int getDy() {
		return dy;
	}
}
